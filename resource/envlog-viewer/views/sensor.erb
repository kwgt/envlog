<html>
  <head>
    <meta charset="utf-8">
      <title>SENSOR RESULT</title>

      <% if not $develop_mode %>
        <meta http-equiv="Pragma" content="no-cache">
        <meta http-equiv="Cache-Control" content="no-cache">
        <meta http-equiv="Expires" content="-1">
      <% end %>
    </meta>

    <script type="text/javascript" src="/js/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="/js/const.js"></script>
    <script type="text/javascript" src="/js/util.js"></script>
    <script type="text/javascript" src="/js/sensor.js"></script>
  </head>

  <body class="sensor-result">
    <div class="pt-5">
      <div class="mx-auto col-11">
        <h2>現在の測定値</h2>
        <div id="result" class="d-flex flex-column mt-4">
          <div id="temperature"
              class="d-flex flex-row justify-content-center temperature">
            <div class="label">気温</div>
            <div class="value">
              <span class="number text-right"></span>
              <span class="unit">&#x00B0;C</span>
            </div>
          </div>

          <div id="humidity"
              class="d-flex flex-row justify-content-center humidity">
            <div class="label">湿度</div>
            <div class="value">
              <span class="number text-right"></span>
              <span class="unit">&#x0025;</span>
            </div>
          </div>

          <div id="air-pressure"
              class="d-flex flex-row justify-content-center air-pressure">
            <div class="label">気圧</div>
            <div class="value">
              <span class="number text-right"></span>
              <span class="unit">hPa</span>
            </div>
          </div>
        </div>

        <h2>グラフ</h2>
        <div id="mode-radio" class="float-left">
          <div class="pretty p-default p-round">
            <input type="radio" name="mode" value="day" checked></input>
            <div class="state p-primary-o">
              <label>日</label>
            </div>
          </div>

          <div class="pretty p-default p-round">
            <input type="radio" name="mode" value="week"></input>
            <div class="state p-primary-o">
              <label>週</label>
            </div>
          </div>

          <div class="pretty p-default p-round">
            <input type="radio" name="mode" value="1month"></input>
            <div class="state p-primary-o">
              <label>1ヶ月</label>
            </div>
          </div>

          <div class="pretty p-default p-round">
            <input type="radio" name="mode" value="3months"></input>
            <div class="state p-primary-o">
              <label>3ヶ月</label>
            </div>
          </div>

          <div class="pretty p-default p-round">
            <input type="radio" name="mode" value="year"></input>
            <div class="state p-primary-o">
              <label>年</label>
            </div>
          </div>

          <div class="pretty p-svg p-curve ml-3">
            <input id="auto-update" type="checkbox"></input>
            <div class="state p-primary">
              <svg class="svg svg-icon" viewBox="0 0 20 20">
                <path d="M7.629,14.566c0.125,0.125,0.291,0.188,0.456,0.188c0.164,0,0.329-0.062,0.456-0.188l8.219-8.221c0.252-0.252,0.252-0.659,0-0.911c-0.252-0.252-0.659-0.252-0.911,0l-7.764,7.763L4.152,9.267c-0.252-0.251-0.66-0.251-0.911,0c-0.252,0.252-0.252,0.66,0,0.911L7.629,14.566z" style="stroke: white;fill:white;"></path>
              </svg>
              <label>
                自動更新
              </label>
            </div>
          </div>
        </div>

        <div id="temp-graph" class="temperature"></div>
        <div id="hum-graph" class="humidity"></div>
        <div id="air-graph" class="air-pressure"></div>
      </div>
    </div>

    <%= render :erb, :"../../common/views/abort_shield" %>
  </body>
</html>
